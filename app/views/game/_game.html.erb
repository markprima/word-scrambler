<body style="background-color:lightblue;">
<% if score != "game over" %>
<div style="width:200px">
    <p align="center", style = "font-family:georgia,garamond,serif;font-size:60px;font-style:italic;"> <%= scrambled_word %> </p>
</div>
<form method="post" action="/score">
    <input type="hidden" name="wordid" value="<%= word_id %>">
    <input type="hidden" name="playerid" value="<%= player_id %>">
    <input placeholder="your answer", type="text" name="answer" />
    <input style = "font-family:georgia,garamond,serif;font-size:15px;font-style:italic;", 
           type="submit" value="Submit" />
</form>

<h2> </h2>
<strong> Points: <%= points %> </strong>
<p> <%= score %> </p>
<% else %>
<p> <%= score %> </p>
<a href="javascript:window.location.href=window.location.href"> Play Again </a>
<% end %>
</body>